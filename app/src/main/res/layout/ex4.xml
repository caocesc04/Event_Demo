<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorBg">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_orange_light"
            android:text="Chương trinh....." />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:text="Thông tin sv:" />

        <TextView
            android:id="@+id/textViewMssv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="40dp"
            android:textColor="@android:color/white"
            android:text="MSSV" />

        <TextView
            android:id="@+id/textViewHoten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:textColor="@android:color/white"
            android:text="Họ Tên" />

        <TextView
            android:id="@+id/textViewGioitinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="180dp"
            android:textColor="@android:color/white"
            android:text="Giới tính" />

        <TextView
            android:id="@+id/textViewBirth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="230dp"
            android:textColor="@android:color/white"
            android:text="Ngày sinh" />

        <TextView
            android:id="@+id/textViewPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="280dp"
            android:textColor="@android:color/white"
            android:text="Điện thoại" />

        <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="330dp"
            android:textColor="@android:color/white"
            android:text="Email" />

        <TextView
            android:id="@+id/textViewCmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="380dp"
            android:textColor="@android:color/white"
            android:text="Số CMTND" />

        <EditText
            android:id="@+id/editTextMssv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textViewMssv"
            android:layout_alignBottom="@+id/textViewMssv"
            android:layout_marginStart="100dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:background="@android:color/white"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textViewHoten"
            android:layout_alignBottom="@+id/textViewHoten"
            android:layout_alignStart="@+id/editTextMssv"
            android:ems="10"
            android:inputType="textPersonName"
            android:background="@android:color/white"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textViewPhone"
            android:layout_alignBottom="@+id/textViewPhone"
            android:layout_alignStart="@+id/editTextEmail"
            android:ems="10"
            android:inputType="textPersonName"
            android:background="@android:color/white"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textViewEmail"
            android:layout_alignBottom="@+id/textViewEmail"
            android:layout_alignStart="@+id/editTextCmt"
            android:ems="10"
            android:inputType="textPersonName"
            android:background="@android:color/white"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editTextCmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/editTextName"
            android:layout_alignTop="@+id/textViewCmt"
            android:ems="10"
            android:inputType="textPersonName"
            android:background="@android:color/white"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editTextBirth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/editTextPhone"
            android:layout_centerVertical="true"
            android:ems="10"
            android:inputType="date"
            android:background="@android:color/white"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textViewGioitinh"
            android:layout_alignBottom="@+id/textViewGioitinh"
            android:layout_marginStart="33dp"
            android:layout_toEndOf="@+id/radioButton2"
            android:textColor="@android:color/white"
            android:text="Nữ" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/radioButton"
            android:layout_alignBottom="@+id/radioButton"
            android:layout_alignStart="@+id/editTextName"
            android:textColor="@android:color/white"
            android:text="Nam" />


    </RelativeLayout>
</LinearLayout>