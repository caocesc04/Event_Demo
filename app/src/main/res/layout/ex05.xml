<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">
    <RelativeLayout
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/project1">
        <TextView
            android:id="@+id/txtvEx050"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_orange_dark"
            android:text="Chương trình chuyển đổi kilogram sang Pound"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtvEx051"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Vui lòng nhập đầy đủ thông tin"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtvNhapSoKilogram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="50dp"
            android:text="Nhập Số Kilogram:"
            android:textColor="@android:color/white"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/txtvKetQua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="Kết Quả:"
            android:textColor="@android:color/white"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/edtNhapSoKlg"
            android:layout_width="wrap_content"
            android:ems="9"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txtvNhapSoKilogram"
            android:layout_alignParentEnd="true"
            android:background="@android:color/white" />

        <EditText
            android:id="@+id/edtKetQua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:ems="9"
            android:layout_alignBottom="@id/txtvKetQua"
            android:background="@android:color/white" />

        <Button
            android:id="@+id/btnDangNhap"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="150dp"
            android:background="@android:color/holo_orange_dark"
            android:text="Đăng Nhập" />

        <Button
            android:id="@+id/btnThoat"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:layout_alignParentEnd="true"
            android:background="@android:color/holo_orange_dark"
            android:text="Thoát" />
    </RelativeLayout>

</LinearLayout>